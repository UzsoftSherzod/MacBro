<div class="order">

    <h1 class="text-center mb-5">My Orders</h1>
        {{#if orders.length}}
            {{#each orders}}
                <div class="card">
                    <div class="card-header">
                        <p><i>{{user.userId.name}}</i> {{user.userId.email}}</p>
                    </div>
                    <div class="card-content">
                        <ol>
                            {{#each notebooks}}
                                <li>
                                    {{notebook.title}}
                                    (x  <b>{{count}}</b> )
                                </li>
                            {{/each}}
                        </ol>
                    </div>
                    <div class="card-action actions">
                        <p class="data">{{date}}</p>
                        <p>Price: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="mt-100">
                <div class="row bascket">
                    <div class="col-md-12">
                        <div class="card bascket">
                            <div class="card-body cart">
                                <div class="col-sm-6 empty-cart-cls text-center">
                                    <img
                                            src="https://i.imgur.com/dCdflKN.png"
                                            width="230"
                                            height="230"
                                            class="img-fluid mb-4 mr-3"
                                    />
                                    <h2><strong>Your Order is Empty</strong></h2>
                                    <h3>Add something to make me happy :)</h3>
                                    <a
                                            href="/notebooks"
                                            class="btn btn-primary cart-btn-transform m-3 px-3 py-2"
                                            data-abc="true"
                                    >continue shopping</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}
</div>
