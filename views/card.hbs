<div class="carts ">
    <h1 class="text-center pb-5">Basket</h1>

    <div id="card">
        {{#if notebooks.length}}
            <table class="table  table-hover table-bordered table-dark">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
                </thead>

                {{#each notebooks}}
                    <tbody>
                    <tr>
                        <td>{{title}}</td>
                        <td>{{count}}</td>
                        <td>
                            <button
                                    class="btn btn-primary"
                                    data-id="{{id}}"
                            >Delete</button>
                        </td>
                    </tr>
                    </tbody>


                {{/each}}
            </table>
            <h2 class="price"><b>Price: </b>{{price}}</h2>

            <form action="/orders" method="POST">
                <button type="submit" class="btn btn-success">Order</button>
            </form>
        {{else}}
            <div class="mt-100">
                <div class="row bascket">
                    <div class="col-md-12">
                        <div class="card bascket">
                            <div class="card-body cart">
                                <div class="col-sm-12 empty-cart-cls text-center">
                                    <img
                                            src="https://i.imgur.com/dCdflKN.png"
                                            width="230"
                                            height="230"
                                            class="img-fluid mb-4 mr-3"
                                    />
                                    <h2><strong>Your Cart is Empty</strong></h2>
                                    <h3>Add something to make me happy :)</h3>
                                    <a
                                            href="/notebooks"
                                            class="btn btn-primary cart-btn-transform m-3"
                                            data-abc="true"
                                    >continue shopping</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}
    </div>
</div>
